$size = 50px;
$stroke = 10px;
$color = #fff;


.loader-wrap {

  pointer-events: none;
  position: absolute;
  top: 50%;
  left: 50%;
}

.loader {

  font-size: 10px;
  position: relative;
  text-indent: -9999em;
  border-top: $stroke solid rgba($color, 0.2);
  border-right: $stroke solid rgba($color, 0.2);
  border-bottom: $stroke solid rgba($color, 0.2);
  border-left: $stroke solid $color;
  -webkit-animation: load8 1s infinite linear;
}

.loader,
.loader:after {

  left: -50%;
  border-radius: 50%;
  width: $size;
  height: $size;
}

@-webkit-keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}
