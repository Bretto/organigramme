.flip-container {

  -webkit-transform: translate3d(0, 0, 0);
  -webkit-transform-style: preserve-3d;



  &.doFlip .flipper {
    -webkit-transform: perspective(1200px) rotateY(180deg) translateZ(-1px);
  }



  .flipper {
    position: relative;
    -webkit-transition: .3s cubic-bezier(0.250, 0.460, 0.450, 0.940) -webkit-transform;

    -webkit-transform-style: preserve-3d;
  }
}


.front {
  z-index: 2;
  background: #145fd7;
}



.back {
  background: #0f4bae;
  -webkit-transform: rotateY(180deg);
}

.front, .back {
  -webkit-backface-visibility: hidden;
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
}

