html, body {
  margin 0;
  padding 0;
  font-family: sans-serif;
  overflow: hidden;
  background: #202a39;
  height: 100%;
  width: 100%;
  -webkit-tap-highlight-color: rgba(#ff005d, 1);
}



.view {

  z-index: 2;
  position: absolute;
  width 100%;
  height 100%;
  overflow: hidden;


  > header {
    position: relative;
    height: 64px;
    max-height: 64px;
    background: rgba(#000, .2);

    .title {
      color: #fff;
      text-shadow 1px 1px #000;
      margin: 0;
      padding: 0;
      margin-bottom: 10px;
    }


    button {
      font-size: 30px;
      color: white;
      text-shadow 1px 1px #000;
      margin: 0;
      padding: 12px;
      background: none;
      border: none;
    }

  }

  > section {

    position: relative;

    input, button {
      font-size: 20px;
      margin: 9px 20px;
      padding: 4px;
      min-height 35px;
    }



    .bar-header {
      height: 64px;
      max-height: 64px;
      justify-content: space-between;
      align-items: center;
      background: rgba(#000, .2);

      .title {
        color: #fff;
        text-shadow 1px 1px #000;
        margin: 0;
        padding: 0;

      }

      button {
        font-size: 30px;
        color: white;
        text-shadow 1px 1px #000;
        margin: 0;
        padding: 12px;
        background: none;
        border: none;

      }

    }

  }



}

.list {
  padding 0;
  margin 0;
  list-style none;
  flex: 1;
  height: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;

  .item {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;

    display: flex;
    flex-wrap: wrap;
    flex: 1;
    margin: 0;
    padding: 0;
    position: relative;

    border-bottom 1px solid #ddd;
    background #ffffff;

    &.item-disabled {
      background: #f8f8f8;
      color: #ccc;
      pointer-events: none;

      a {
        background: #f8f8f8;
      }
    }

    &.show-delete {
      a {
        -webkit-transform: translate3d(45px, 0, 0);
      }
    }


    a {
      -webkit-transition: .3s ease-in-out -webkit-transform;
      display: block;
      position: relative;
      padding: 16px 49px 16px 16px;
      border: none;
      background-color: white;
    }

    button {
      font-size: 30px;
      margin 0;
      padding 0;
      background transparent;
      border none;
      position: absolute;
      padding: 11px;
      padding-left: 12px;
    }
  }
}





