duration = .3s;



.view-animate-next {
  z-index: 3;

  &.ng-enter, &.ng-leave {
    -webkit-transition: duration ease-in-out -webkit-transform;
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
  }

  &.view-animate-next.ng-enter {
    -webkit-transform: translate3d(100%, 0, 0);
  }
  &.view-animate-next.ng-enter.ng-enter-active {
    -webkit-transform: translate3d(0, 0, 0);
  }
  &.view-animate-next.ng-leave.ng-leave-active {
    -webkit-transform: translate3d(-100%, 0, 0);
  }
}

.view-animate-back {
  z-index: 3;

  &.ng-enter, &.ng-leave {
    -webkit-transition: duration ease-in-out -webkit-transform;
    position:absolute;
    top:0;
    left:0;
    right:0;
    bottom:0;
  }

  &.view-animate-back.ng-enter {
    -webkit-transform: translate3d(-100%, 0, 0);
  }
  &.view-animate-back.ng-enter.ng-enter-active {
    -webkit-transform: translate3d(0, 0, 0);
  }
  &.view-animate-back.ng-leave.ng-leave-active {
    -webkit-transform: translate3d(100%, 0, 0);
  }
}





